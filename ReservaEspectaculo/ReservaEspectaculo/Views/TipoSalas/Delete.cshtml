@model ReservaEspectaculo.Models.TipoSala

@{
    ViewData["Title"] = "Delete";
}

<h1>Borrar</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>TipoSala</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Precio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Precio)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button class="btn btn-danger" id="btn1" onClick="return confirmacionBorrar()">Borrar</button>
        <a asp-action="Index">Atras</a>
    </form>
</div>

<script>
    function confirmacionBorrar(event) {
        var reply = confirm("Seguro que queres borrar a este tipo de sala?");
        if (reply) {
            return true;
        }
        else {
            return false;
            event.preventDefault();
        }
    }
</script>
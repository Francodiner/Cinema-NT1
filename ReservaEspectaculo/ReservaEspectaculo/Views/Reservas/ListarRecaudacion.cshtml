@model IEnumerable<ReservaEspectaculo.ViewModels.Recaudacion>

<h2>Recaudación</h2>

<h3>
    Pelicula:
    @if (Model.Count() > 0)
    {
        @Html.DisplayFor(modelItem => Model.First().TituloPelicula)
    }
</h3>

<table class="table text-center position-static">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Mes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Anio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Importe)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Mes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Anio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Importe)
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <a asp-action="Index" asp-controller="Home">Atras</a>
</div>
@model ReservaEspectaculo.Models.Reserva

<h4>Cancelar reserva</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Cancelar">
            <div asp-validation-summary="ModelOnly" class="text-danger font-weight-bold"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="FuncionId" />
            <input type="hidden" asp-for="ClienteId" />
            <div class="form-group">
                <label  class="control-label"> Fecha de la función</label>
                <input asp-for="Funcion.Fecha" class="form-control" readonly="readonly" />
                <span asp-validation-for="Funcion.Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Título de la película</label>
                <input asp-for="Funcion.Pelicula.Titulo" class="form-control" readonly="readonly" />
                <span asp-validation-for="Funcion.Pelicula.Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Sala número</label>
                <input asp-for="Funcion.Sala.Numero" class="form-control" readonly="readonly" />
                <span asp-validation-for="Funcion.Sala.Numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CantidadButacas" class="control-label"></label>
                <input asp-for="CantidadButacas" class="form-control"  readonly="readonly" />
                <span asp-validation-for="CantidadButacas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cancelar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListarReservasCliente">Atras</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


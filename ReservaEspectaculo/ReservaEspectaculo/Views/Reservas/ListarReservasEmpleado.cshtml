@model IEnumerable<ReservaEspectaculo.Models.Reserva>

<h3>
    Pelicula:
    @if (Model.Count() > 0)
    {
        @Html.DisplayFor(modelItem => Model.First().Funcion.Pelicula.Titulo)
    }
</h3>
<a4>Fecha:      
    @if (Model.Count() > 0)
    {
        @Html.DisplayFor(modelItem => Model.First().Funcion.Fecha)
    }</a4>
<table class="table text-center position-static">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cliente.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CantidadButacas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Activa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cancelable)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CantidadButacas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Activa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cancelable)
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <a asp-action="ListarFunciones" asp-controller="Funciones" asp-route-id="@Model.First().Funcion.PeliculaId">Atras</a>
</div>